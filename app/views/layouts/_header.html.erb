<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Test App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
            <li class="avatar">
              <% if current_user.picture? %>
                  <%= image_tag current_user.picture.url, alt: current_user.name %>
              <% elsif current_user.image_url  %>
                  <%= image_tag current_user.image_url, alt: current_user.name %>
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", settings_profile_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Register", register_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

